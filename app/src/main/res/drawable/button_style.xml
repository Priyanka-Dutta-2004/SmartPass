<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/bright_pink"
                android:endColor="@color/pink"
                android:angle="45"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/pink"/>
        </shape>
    </item>

    <!-- State when the button is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pink"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/bright_pink"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/pink"
                android:endColor="@color/bright_pink"
                android:angle="45"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/bright_pink"/>
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
